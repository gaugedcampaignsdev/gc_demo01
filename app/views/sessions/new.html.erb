<div id="frm">
	<h3><%#= current_subdomain.nil? ? "Gauged Campaigns" : current_subdomain.capitalize %> Login</h3><br>
	<% form_tag session_path do %>
	<p><label for="login">User ID</label>
	<%= text_field_tag 'login' %></p>

	<p><label for="password">Password</label>
	<%= password_field_tag 'password' %></p>
	
	<p><label for="remember_me">Remember me</label>
	<%= check_box_tag 'remember_me' %></p>

	<p><label>&nbsp;</label><%= submit_tag 'Log in' %>&nbsp;&nbsp;<%= link_to "Sign Up", new_user_path %></p>
	<% end %>
</div>