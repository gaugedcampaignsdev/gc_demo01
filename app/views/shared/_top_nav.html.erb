<ul>
  <% if current_user %>
		<span class="flright">
      Logged in as:&nbsp;<%= link_to h(current_user.login.capitalize), edit_user_path(current_user) %>
  		&nbsp;<%= link_to 'Log out', logout_url %>
		</span>
      <li><%= link_to 'Campaigns', campaigns_path %></li>
    <% if current_user.has_role?('super') %>
        <li><%= link_to 'Users', user_list_path %></li>
        <li><%= link_to 'Companies', companies_path %></li>
    <% elsif current_user.has_role?('admin') %>
        <li><%= link_to 'Users', user_list_path %></li>
        <li><%= link_to 'Company', companies_path %></li>
    <% end %>
  <% elsif current_user.nil? %>
	  <li><%= link_to 'Log In', login_path %></li>
	  <li><%#= link_to 'Forgot Password?', forgot_password_path %></li>
    <li><%= link_to 'Sign Up', signup_path %></li>

  <% end %>
</ul>