<%= error_messages_for :campaign %>

<div style="clear:both;">
<div id="frm">
	<% form_for @campaign, :html => {:multipart => true} do |f| %>
 		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>
 		<p>
			<%= f.label :slogan %>
			<%= f.text_field :slogan %>
		</p>
 		<p>
			<%= f.label :description %>
			<%= f.text_area :description, :rows => 10, :cols => 40 %>
		</p>
 		<p>
			<%= f.label :target_amount %>
			<%= f.text_field :target_amount, :size => "15" %>
		</p>
 		<p>
			<%= f.label :campaign_status_id %>			
      <% campaign_status = CampaignStatus.all.map { |cs| [cs.name, cs.id]}%>
      <%= select_tag(:campaign_status_id, options_for_select(campaign_status)) %>
		</p>
		<p>
			<%= f.label 'Campaign Logo' %>
			<%= f.file_field :logo %>
		</p>
		<p>
			<label>&nbsp;</label>
			<%= submit_tag 'Submit' %>
		</p>
	<% end %>
</div>