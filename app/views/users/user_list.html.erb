<div id="campaign_list">
	<h3>User Listing</h3><br>
  <table class="pretty">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Role</th>
			<th></th>
    </tr>
    <% for user in @users %>
      <tr>
        <td><%= user.login%></td>
        <td><%= user.email %></td>
        <td>
						<% user.roles.each { |role| %>
							<%= role.name %> <% }  %>
				</td>
				<td><%= link_to 'Edit Role', edit_role_path(user.id) %></td>
      </tr>
    <% end %>
  </table>
</div>