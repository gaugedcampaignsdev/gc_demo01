<div id="frm">
	<h3>Sign-Up Information</h3><br>
	
	<%= error_messages_for :object => [@user, @company] %>
	
	<% form_for :user, :url => users_path do |f| %>
	  <% fields_for :company do |c| %>
	    <p><label>Company Name</label>
			<%= c.text_field :name, :size => '20' %></p>
			
			<p><label>Street Address</label>
			<%= c.text_field :address, :size => '20' %></p>
			
			<p><label>City</label>
			<%= c.text_field :city, :size => '20' %></p>
			
			<p><label>State</label>
			<%= c.text_field :state, :size => '2' %></p>
			
			<p><label>Zip Code</label>
			<%= c.text_field :zip_code, :size => '10' %></p>
	  <% end %>

 		<p><label for="first_name">First name</label>
		<%= f.text_field :first_name, :size => '20' %></p>
		
		<p><label for="last_name">Last name</label>
		<%= f.text_field :last_name, :size => '20' %></p>

		<p><label for="email">Email</label>
		<%= f.text_field :email, :size => '20' %></p>

		<p><label for="login">Login</label>
		<%= f.text_field :login, :size => '20' %></p>

		<p><label for="password">Password</label>
		<%= f.password_field :password, :size => '20' %></p>

		<p><label for="password_confirmation">Confirm Password</label>
		<%= f.password_field :password_confirmation, :size => '20' %></p>
		
		<p><label>&nbsp;</label><%= submit_tag 'Sign up' %></p>
	<% end %>
</div>