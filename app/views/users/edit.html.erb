<div id="frm">
	<h3>Edit</h3><br>
	<%= error_messages_for :user %>
	<% form_for @user do |f| %>
 		<p><label for="first_name">First name</label>
		<%= f.text_field :first_name, :size => '20' %></p>
		<p><label for="last_name">Last name</label>
		<%= f.text_field :last_name, :size => '20' %></p>

		<p><label for="login">Login</label>
		<%= f.text_field :login, :size => '15' %></p>

		<p><label for="email">Email</label>
		<%= f.text_field :email, :size => '25' %></p>
		<p><label>&nbsp;</label><%= submit_tag 'Save' %></p>
	<% end %>
</div>